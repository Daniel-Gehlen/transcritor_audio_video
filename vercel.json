{
  "version": 2,
  "builds": [
    {
      "src": "wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",  
        "installCommand": "pip install -r requirements.txt && apt-get update && apt-get install -y ffmpeg"  // Instala dependÃªncias e FFmpeg
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "wsgi.py"
    }
  ],
  "maxRequestBodySize": "50mb"  
}